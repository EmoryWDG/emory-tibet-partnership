/* CUSTOM STYLES FOR BREADCRUMB */

.breadcrumb {
	background-color: #fff;
	border-radius: 4px;
	list-style: none;
	margin-bottom: 20px;
	padding: 8px 15px;
}
.breadcrumb > li {
	display: inline-block;
	a {
		color: $orange;
		text-decoration: none;
	}
}
.breadcrumb > li + li:before {
	color: $grey;
	content: "/\00a0/\00a0";
	padding: 0 5px;
}

.breadcrumb > .active {
	color: $grey;
}