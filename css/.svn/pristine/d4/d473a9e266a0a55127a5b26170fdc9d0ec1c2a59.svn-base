
@mixin fa-icon ($icon) {
	position: absolute;
	font-family: FontAwesome;
	font-size: 100px;
	bottom: 10px;
	right: 10px;
	content: $icon;
	opacity: .1;
	color: $green;
}

.home-news {
	padding: 20px 20px;
	&.green{
		background-color: $green;
	}
	.news-item{
		background-color: $white;
		position:relative;
		height:250px;

		.content {
			text-transform: uppercase;
			font-weight: 800;

			p.news-title {
				font-size: 16px;
			}
		}

		&.has-image {
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
			color: $white;

			.content{
				position:absolute;
				bottom:0;
				text-shadow: 0 1px 2px $black;
			}
		}

		&.no-image {

			&.news {
				&:before {
					@include fa-icon("\f1ea");
				}
			}
			&.link {
				&:before {
					@include fa-icon("\f08e");
				}
			}
			&.document {
				&:before {
					@include fa-icon("\f0f6");
				}
			}
			&.pdf {
				&:before {
					@include fa-icon("\f1c1");
				}
			}

			&.youtube {
				&:before {
					@include fa-icon("\f16a");
				}

			}
			&.video {
				&:before {
					@include fa-icon("\f008");
				}

			}
			&.event {
				&:before {
					@include fa-icon("\f073");
				}
			}
		}
		
	}
}